{% extends "base.twig" %}

{% block content %}
    {% set self = glossary[0] %}

    {% if self.title %}
        <h2>{{ self.title }}</h2>
    {% endif %}

    {% block terms %}
        {{ include('glossary-terms.twig', {
            terms: terms,
            translations: translations,
            languages: languages
            }
        ) }}
    {% endblock %}
{% endblock %}