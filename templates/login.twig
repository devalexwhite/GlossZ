{% extends "base.twig" %}

{% block content %}
    <form method="POST" action="/user/login">
        <div class="form-group">
            <label for="user-username">Username</label>
            <input value="{{ form_values['username'] ? form_values['username'] : null }}" type="text" name="username" class="form-control" id="user-username">
        </div>
        <div class="form-group">
            <label for="user-password">Password</label>
            <input value="{{ form_values['password'] ? form_values['password'] : null }}" type="password" name="password" class="form-control" id="user-password">
        </div>
        <button type="submit" class="btn btn-primary float-right">Login</button>
    </form>
{% endblock %}