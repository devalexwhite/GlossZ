.user-profile-container {
    margin: 0 1.5625rem;

     @media(min-width: 768px) {
         width: 30rem;

         margin: 0 auto;
     }
}

.user-profile-header {
    position: relative;
    width: 100%;

    text-align: center;

    margin-bottom: 3.125rem;
}

ul.user-glossary-list {
    position: relative;
    width: 100%;

    margin: 0;
    padding: 0;

    list-style: none;

    text-align: center;

    li {
        position: relative;
        width: 100%;

        a {
            font-size: inherit;
            color: inherit;
            text-decoration: none;

            p {
                &:hover {
                    color: $site-primary;
                }
            }
        }
    }
}