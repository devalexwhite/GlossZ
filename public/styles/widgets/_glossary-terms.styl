ul.glossary-terms-list {
    position: relative;
    width: 100%;

    list-style: none;

    margin: 0 0 3.125rem 0;
    padding: 0;
}

.glossary-terms-term-group {
    h4 {
        margin-bottom: .9375rem;
    }
}

.glossary-terms-term-card {
    margin-bottom: 3.125rem;
    
    .term-card-title {
        position: relative;
        width: 100%;        
        height: 3.75rem;

        display: flex;
        flex-direction: row;
        align-items: center;

        box-shadow: 2px 2px 5px 0 rgba(129,129,129,0.39);

        background-color: $site-primary;

        span {
            {inputFont}            
            margin: 0 .9375rem;
            color: white;
        }
    }

    .term-card-content {
        position: relative;
        min-height: 3.75rem;

        display: block;
        
        margin: 0 .625rem;
        padding: .9375rem .9375rem;
        
        background-color: white;

        box-shadow: 2px 4px 5px 0 rgba(129,129,129,0.39);

    }
    .term-card-content + .term-card-content {
        border-top: solid 1px lighten($site-light, 80%);
    }
}